html(class="no-js", lang="en", xmlns:og="http://opengraphprotocol.org/schema/", xmlns:fb="http://www.facebook.com/2008/fbml")
  // <![endif]
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name="viewport", content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0')

    meta(name="description", content="Memo from Santa | Organise your Secret Santa party!")
    meta(name="author", content="Joris Ooms, Seeger Mattijs")
    meta(name="keywords", content="christmas, santa, reindeer, santa claus, merry, happy, party, secret santa, gifts, gif, presents, fun, candles, rudolph")
    meta(property="fb:app_id", content="389376211197256")

    - var site = {title: 'Memo from Santa | Organise your Secret Santa party!', url: 'http://memofromsanta.com', image: 'http://memofromsanta.com/img/og.jpg', description: 'Memo from Santa! Help Santa out by organising your own Secret Santa party!'}
    each val, key in site
      meta(property='og:'+'#{key}', content='#{val}')

    link(rel="icon", href="img/favicon.ico", type="image/x-icon")

    title Organise your Secret Santa party!

    if env === 'development'
      //- build:css app/css/santa.min.css
      link(rel="stylesheet", href="/css/jquery-ui.min.css")
      link(rel='stylesheet', href='/css/main.css')
      //- endbuild
    else
      link(rel="stylesheet", href="/css/santa.min.css")

  body(ng-app="SecretSantaApp", id="ng-app")
    div.app-container
      a#github(href="https://github.com/cabaret/node-secretsanta", title="Github", target="_blank")
        img(style="position: absolute; top: 0; right: 0; border: 0;", src="http://www.memofromsanta.com/img/github-fork.png", alt="Fork me on GitHub")
      header.header
        img(src="/img/logo.svg", alt="Memo from Santa logo", width="208", height="243").logo__img
        h1.logo__text Memo from Santa

      section.memo
        div.container
          p.col-xs-12.memo__letter
            span.headline Help, Rudolph has gone missing!
            | Santa Claus won't be able to deliver presents in time. Will you help him out?
            | Fill in the names of you and your friends and plan your Secret Santa Christmas party.
            | We'll make sure everyone knows for whom to buy a present!

      block content

      footer.footer.col-xs-12
        div.col-xs-12.col-sm-6.col-md-3.col-md-push-3.credit.joris
          p.credit__author Joris Ooms
          p.credit__skill Development
          ul.social
            - var social = [{ 'name': 'github', 'url': 'https://github.com/cabaret' }, {'name': 'twitter', 'url': 'https://twitter.com/ontolecabaret' }, {'name': 'linkedin', 'url': 'http://www.linkedin.com/in/oomsjoris' }, { 'name': 'instagram', 'url': 'http://instagram.com/dinosaursinspace' }]
            - for network in social
                li.social__item
                  a(href="#{network.url}", title="#{network.name}", target="_blank", class="joris-#{network.name}")
                    i(class="social__icon icon--#{network.name}")
        div.col-xs-12.col-sm-6.col-md-3.col-md-push-3.credit.seeger
          p.credit__author Seeger Mattijs
          p.credit__skill Design
          ul.social
            - var social = [{ 'name': 'dribbble', 'url': 'http://dribbble.com/seegermattijs' }, { 'name': 'twitter', 'url': 'https://twitter.com/SeegerMattijs' }, { 'name': 'linkedin', 'url': 'http://be.linkedin.com/pub/seeger-mattijs/48/284/745' }, { 'name': 'instagram', 'url': 'http://instagram.com/seegermattijs' }]
            - for network in social
                li.social__item
                  a(href="#{network.url}", title="#{network.name}", target="_blank", class="seeger-#{network.name}")
                    i(class="social__icon icon--#{network.name}")


        div.social-shares.col-xs-12
          div.addthis_toolbox.addthis_default_style.social-shares__toolbox
            a.addthis_button_preferred_1
            a.addthis_button_preferred_2
            a.addthis_button_preferred_3
            a.addthis_button_preferred_4
            a.addthis_button_compact
            a.addthis_counter.addthis_bubble_style

        p.col-xs-12.col-sm-8.col-sm-push-2.privacy
          | Memo from Santa does not store e-mail addresses. We will not send you e-mails apart from the event e-mail, nor will we use your e-mail address for any other purpose.

    div.legacy
       p
        | <strong>Dear visitor,</strong> <br><br>

        | The elves who developed this website did decide to not support older browsers.<br>
        | To view this website, please upgrade your internet browser. <br><br>
        | You can find more information about upgrading to a better and newer browser here:<br><br>
        | <strong><a href="http://browsehappy.com/" title="Browse happy" target="_blank">Browse happy - Upgrade your browser today!</a></strong><br><br>
        | Don't forget to visit us again afterwards!<br><br>
        | With love,<br><br>
        | Santa Claus

